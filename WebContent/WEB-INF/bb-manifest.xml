<?xml version="1.0" encoding="ISO-8859-1"?>
<manifest>
  <!-- core extension information -->
  <plugin>
    <name value= "plugin.name"/>
    <handle value= "Ilos-B2"/>
    <default-locale value="en_US" />
    <description value= "plugin.description"/>
    <version value= "3.4.140213"/>
    <requires>
    	<bbversion value="9.1.0"/>
    </requires>
    <vendor>
      <id value="ist"/>
      <name value="Ilos Videos"/>
      <url value="https://www.ilosvideos.com" />
      <description value="plugin.vendor.description" />
    </vendor>
	  <http-actions>
  		<config value="system/index.jsp" />
	  </http-actions>

    <content-handlers>
      <!-- Ilos Content Type Handler. -->
      <content-handler> 
        <name value="Ilos Video"/>
        <handle value= "resource/x-bb-ensemble-vid-mashup"/>
        <http-actions>
	        <create value="handler/search-vid.jsp"/>
<!--  	    <modify value="execute/edit"/>
	        <remove value="execute/remove"/>   -->
        </http-actions>
        <icons>
	        <toolbar value="/images/handler_icon.gif"/>
	        <listitem value="/images/handler_icon.gif"/>
        </icons>
        <types>
            <type>
                <action-type value="mashup"/>
            </type>
            <type>
                <action-type value="image"/>
            </type>            
        </types>             
      </content-handler>
      <!-- Ensemble Playlist Content Handler-->
      <content-handler> 
        <name value="Ensemble Playlist"/>
        <handle value= "resource/x-bb-ensemble-wd-mashup"/>
        <http-actions>
	        <create value="handler/web-dest.jsp"/>
<!--        <modify value="execute/edit"/>
	        <remove value="execute/remove"/> -->
        </http-actions>
        <icons>
	        <toolbar value="/images/handler_icon.gif"/>
	        <listitem value="/images/handler_icon.gif"/>
        </icons>
        <types>
            <type>
                <action-type value="mashup"/>
            </type>
            <type>
                <action-type value="image"/>
            </type>            
        </types>             
      </content-handler>

    </content-handlers>

    
    <!-- Tools defined by this extension -->
    <application-defs>
      <application handle="Ilos-B2" type="shared" use-ssl="false" name="Ilos Video (In Text Editor)" can-allow-guest="true"  small-icon="" large-icon="/images/handler_icon.gif" is-course-tool="true" is-group-tool="true" is-sys-tool="true" is-org-tool="true">
        <description small-icon="/images/handler_icon.gif">Application installed as part of the Ilos Building Block</description>
        <links>
           <link> <!-- System Tool -->
            <type value="system_tool"/>
            <name value="Ilos Settings"/>
            <url value="system/index.jsp" />
            <description value="Administer the Ilos Video Building Block" />
            <icons>
              <listitem value="images/ensemble.icon.gif"/>
            </icons>
          </link>   
		  <link> <!--course Mashup Entry Point For Ilos Video-->
			   <type value="vtbe_mashup_course" />
			   <name value="Ilos Videos E" />
			   <url value="handler/search-vid.jsp?vtbe=true&amp;course_id=@X@course.pk_string@X@" />
			   <description value="Embed Ilos Video" />
		 	   <icons>
		 		 <listitem value="/images/handler_icon.gif"></listitem>
		 		 <toolbar value="/images/handler_icon.gif"></toolbar>
		 	   </icons>
		 </link>       
		</links>
      </application>
    </application-defs>
    
    
    <!-- code permissions required for proper operation -->
    <permissions>
      <permission type="persist" name="Content" actions="create,modify,delete"/>
      <permission type="attribute" name="user.authinfo" actions="get,set"/>
      <permission type="attribute" name="user.personalinfo" actions="get,set"/>
  	  <permission name="suppressAccessChecks" type="java.lang.reflect.ReflectPermission"  />    
	  <permission type="socket" name="*" actions="connect,resolve"/>  	
	</permissions>
  </plugin>

</manifest>
